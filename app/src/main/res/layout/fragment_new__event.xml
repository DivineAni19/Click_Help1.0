<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context="com.Help.Helping_1.click_help_1.New_Event">

    <!-- TODO: Update blank fragment layout -->







    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_add_a_photo_white_24dp"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Title..."
        android:ems="10"

        android:background="@drawable/shadow_text"
        android:layout_marginTop="20dp"
        android:id="@+id/add_title"

        android:padding="10dp"

        android:layout_centerHorizontal="true"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@drawable/shadow_text"
        android:hint="Place..."

        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/add_place"

        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"

        android:hint="Description..."

        android:layout_marginTop="24dp"
        android:padding="10dp"
        android:id="@+id/add_description"
        android:background="@drawable/shadow_text"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"

        android:text="Add Event"
        android:padding="20dp"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="30dp"
        android:id="@+id/add_event" />
</LinearLayout>

</ScrollView>