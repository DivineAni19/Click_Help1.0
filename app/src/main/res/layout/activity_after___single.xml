<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/d1"

    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context="com.Help.Helping_1.click_help_1.After_Activity_Single">




    <TextView
        android:text="Event Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/aactivity_name"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000" />



        <Button
            android:text="Interested"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/iinterested"
            android:background="@drawable/button_design"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />





    <TextView
        android:text="Event Place:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:id="@+id/Place_un"
        android:textSize="20sp"
        android:layout_marginTop="20dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textColor="#000"
         />



    <TextView
        android:text="TextView"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/eevent_place"
        android:textSize="18sp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
    <TextView
        android:text="About Event:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:id="@+id/about_un"
        android:textSize="20sp"
        android:layout_marginTop="20dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
         />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"


        android:id="@+id/ddescription"
        android:textSize="18sp"
        android:layout_marginTop="10dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

</LinearLayout>
</ScrollView>
