

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/d1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Help.Helping_1.click_help_1.Donation_Info_Admin">

    <!-- TODO: Update blank fragment layout -->






    <TextView
        android:text="Event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:id="@+id/eve_name"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="#000" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Collection:"
        android:textAlignment="center"
        android:id="@+id/total"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textStyle="normal|bold" />

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listviewdonationinfo" />



</LinearLayout>



